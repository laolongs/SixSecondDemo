<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f00"
        android:gravity="center"
        android:id="@+id/searchedit_header">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:backgroundTint="#eee"
            android:textColorHint="#eee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="<  确认订单"
            android:textSize="25sp"
            android:textColor="#fff"
            android:id="@+id/fouth_head_gw"
            />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fouth_recy"
        android:layout_below="@+id/searchedit_header"
        android:layout_above="@+id/searchedit_foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/searchedit_foot">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:backgroundTint="#eee"
            android:textColorHint="#eee"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="合计:￥0"
            android:textSize="20sp"
            android:id="@+id/fouth_foot_hj"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#f57800"
            android:text="提交订单"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/fouth_foot_js"
            />
    </LinearLayout>
</RelativeLayout>